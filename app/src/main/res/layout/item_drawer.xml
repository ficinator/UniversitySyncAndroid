<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/drawer_item_icon_max_width"
        android:maxHeight="@dimen/drawer_item_icon_max_height"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/drawer_item_icon_margin_right"
        android:src="@drawable/common_signin_btn_icon_normal_dark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/thumb"
        android:layout_centerVertical="true">
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Title"
            android:textSize="@dimen/drawer_item_title_font_size"/>
        <TextView android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Subtitle"/>
    </LinearLayout>

</RelativeLayout>